@model CourseListModel
@{
    ViewData["Title"] = "Index";
}

<h1>Course</h1>
@foreach(var Course in Model.GetCourses())
{
    <h2>@Course.Name</h2>
    <h3>@Course.Fees</h3>
}
@section Styles
    {
    <link rel="stylesheet" href="/adminlte3/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
}



<section class="content">
    <div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <!-- /.card -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">DataTable with default features</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="courses" class="table table-bordered table-striped">
                        
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Fee</th>
                                <th>Id</th>
                            </tr>
                        </thead>
                        <tbody>
                            </tbody>
                            <tfoot>
                                 <tr>
                                <th>Name</th>
                                    <th>Fee</th>
                                    <th>Id</th>
                            </tr>
                                </tfoot>
                    </table>
                </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    </div>
    </div>  <!-- /.row -->
</section>
<!-- /.content-wrapper -->



@section Scripts
    {
    <!-- DataTables -->
    <script src="~/adminlte3/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/adminlte3/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>

    <!-- page script -->
    <script>
        $(function (){
            $('#courses').DataTable({
                "processing":true,
                "serverside":true,
                "ajax":{
                    "url":"/Admin/Course/GetCourses"
                }
            })
        });
    </script>

}
